extends layout

block content
  
  .row
    .span8
      h3 Corsi
      
    .span4
      a.btn.pull-right.btn-primary.btn-large(href='/courses/form')
        i.icon-white.icon-upload
        |  Carica nuovo corso
        
  .row
    .span12
      if courses.length > 0
      
        table.table.table-striped
          thead
            tr
              th.span5 Nome corso
              th.span3 Data creazione
              th.span1 Stato
              th.span3 &nbsp;
          tbody
            each item in courses
              tr
                td #{item.doc.name}
                td #{moment(item.doc.created_on).format('LLL')}
                td
                  if item.doc.enabled
                    a(title='Corso attivo')
                      i.icon-ok
                  else
                    a(title='Corso disabilitato')
                      i.icon-remove
                td
                  .btn-group.pull-right
                    a.btn.btn-small.input-small(href='/courses/form/#{item.doc._id}')
                      i.icon-pencil
                      |  Modifica
                    if item.doc.enabled
                      a.btn.btn-small.btn-danger.input-small(href='/courses/disable/#{item.doc._id}')
                        i.icon-ban-circle.icon-white
                        |  Disabilita
                    else
                      a.btn.btn-small.btn-info.input-small(href='/courses/disable/#{item.doc._id}')
                        i.icon-ok.icon-white
                        |  Abilita
      
      
      
      else
        
        p.alert.alert-info Non Ã¨ stato inserito ancora alcun corso.

