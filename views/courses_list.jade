extends layout

block content
  .spacer
  .row
    .span8
      h3 Corsi 
        small da questa pagina puoi creare, abilitare e disabilitare i corsi SCORM
      
    .span4
      .spacer
      a.btn.pull-right.btn-primary(href='/courses/form')
        i.icon-white.icon-upload
        |  Carica nuovo corso
  hr

  .row
    .span12
      if courses.length > 0
      
        table.table.table-striped
          thead
            tr
              th(style="width: auto;") Nome corso
              th.text-center(style="width: 50px;") Stato
              th(style="width: 180px;") Data creazione
              th(style="width: 210px;") &nbsp;
          tbody
            each item in courses
              tr
                td
                  a(href='/player/#{item.doc.url}', target='blank') #{item.doc.name}
                td.text-center
                  if item.doc.enabled
                    img.image-icon(src='/img/icon-status-ok.png', title='Corso attivo')
                  else
                    img.image-icon(src='/img/icon-status-error.png', title='Corso disabilitato')
                td #{moment(item.doc.created_on).format('LLL')}
                td.actions
                  
                  if item.doc.enabled
                    a.btn.btn-small.btn-danger(href='/courses/disable/#{item.doc._id}')
                      i.icon-ban-circle.icon-white
                      |  Disabilita
                  else
                    a.btn.btn-small.btn-info(href='/courses/disable/#{item.doc._id}')
                      i.icon-ok.icon-white
                      |  Abilita
                  | &nbsp;
                  a.btn.btn-small(href='/courses/form/#{item.doc._id}')
                    i.icon-pencil.icon-white
                    |  Modifica
      
      
      else
        
        p.alert.alert-info Non Ã¨ stato inserito ancora alcun corso.

