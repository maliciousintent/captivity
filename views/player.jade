extends layout_user

block title
  | #{course.name}

block breadcrumb
  li.spacer &raquo;
  li
    a(href='/player/#{course.url}') #{course.name}

block content
  script(type='text/javascript')
    window.CAPTIVITY_LMS = true;
    window.SCORM_API_PREFIX = '/SCORM/#{user._id}/#{course._id}/'
      
  script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.0/jquery.min.js')
  script(src='/js/vendor/MicroCache.js')
  script(src='/js/scorm.js')
  
  .player-container(style='width: 100%; height: 100%; min-height: 100%; border: 0;')
    iframe#course-iframe(src='#{course.scorm + '/' + course.scorm_index}', style='width: 100%; border: 0;')

block logged
  li.spacer      
    small Sei collegato come 
      b #{user.username}
      | .
